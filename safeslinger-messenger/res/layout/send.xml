<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/SendScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/size_5dp"
        android:layout_weight="2"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/FirstFrame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/SendFrameButtonRecipient"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/size_5dp" >

                <Button
                    android:id="@+id/SendButtonRecipient"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_3d"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:id="@+id/SendFrameRecipient"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/button_side_margin"
                    android:layout_marginRight="@dimen/button_side_margin"
                    android:layout_marginTop="@dimen/size_5dp" >

                    <ImageView
                        android:id="@+id/SendImageViewRecipPhoto"
                        android:layout_width="@dimen/size_50dp"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/label_Photo"
                        android:src="@drawable/ic_silhouette_select" >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/SendTextViewRecipName"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@string/label_SelectRecip"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/SendTextViewRecipKey"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/darker_gray"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/text_size_micro" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ComposeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/SendEditTextMessage"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="@string/label_ComposeHint"
                    android:imeOptions="actionSend"
                    android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:nextFocusRight="@+id/SendFrameButtonSend"
                    android:privateImeOptions="nm"
                    android:textSize="@dimen/text_size_msg" />

                <LinearLayout
                    android:id="@+id/SendFrameButtonAttach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/SendButtonFile"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/size_50dp"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_marginLeft="@dimen/button_side_margin"
                        android:contentDescription="@string/btn_SelectFile"
                        android:drawablePadding="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_attachment_select" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SendFrameButtonSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/SendButtonSend"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/button_side_margin"
                        android:layout_weight="1.0"
                        android:contentDescription="@string/btn_SendFile"
                        android:drawablePadding="0dp"
                        android:src="@android:drawable/ic_menu_send" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>